
<div class="user_page">
	<div class="user">
	
		<%= image_tag(@user.photo, alt: "user photo", class: "user_photo") %>
	
		<div class="user_info">
			<h2>
			<%= link_to @user.name, user_path(@user.id) %>
			</h2>		
			<p>Number of posts: <%= @user.posts_counter %></p>
		</div>
	</div>
		
	<div class="user_bio">
		<h4>Bio</h4>
		<article> <%= @user.bio %> </article>
	</div>
	
	<ul class="posts_list">
	 <%= render partial: "post", collection: @posts, as: "post" %>
	</ul>
	
	<button>See all posts</button>
	
</div>
