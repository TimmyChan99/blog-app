<div class="container py-4">
	<div class="container mt-4 d-flex justify-content-center">
		<%= image_tag('data:image/png;base64,', alt: "user photo", class: "user_photo") %>
		<div class="user_info">
			<h2><%= link_to @user.name, user_path(@user.id) %></h2>		
			<p>Number of posts: <%= @user.posts_counter %></p>
		</div>
	</div>		
	<div class="user_bio">
		<h4>Bio</h4>
		<article> <%= @user.bio %> </article>
	</div>
	<ul class="posts_list">
	  <% @posts.includes([:author]).each do |post| %>
		   <%= render partial: "partials/post", locals: { post: post } %>
	  <% end %>
	</ul>	
	<button class='btn btn-outline-dark'><%= link_to "See all posts", user_posts_path(@user.id) %></button>	
</div>
