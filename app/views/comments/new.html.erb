<h2 class='headline'>Add Comment</h2>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

	<%= form_with model: @comment, url: user_post_comments_path, scope: :comment, class: 'the_form' do |f| %>
   <%= f.label :text %><br>
   <%= f.text_area :text %><br>
	 <%= f.submit "Add comment"%>
	<% end %>
