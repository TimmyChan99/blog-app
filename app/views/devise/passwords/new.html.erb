<div class="container-sm">
  <div class="card text-center">
    <div class="card-body">
      <h2 class="card-title">Forgot your password?</h2>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), data: { turbo: false }, html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :email, class: "visually-hidden" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",  placeholder: "Email"  %>
        </div>
      
        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-outline-dark" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
      
    </div>
  </div>
</div>
