<div class="container-sm">
  <div class="card text-center">
    <div class="card-body">
      <h2>Change your password</h2>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), data: { turbo: false }, html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
      
        <div class="field">
          <%= f.label :password, class: "visually-hidden" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control",  placeholder: "New password" %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation, class: "visually-hidden" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control",  placeholder: "Confirm new password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "Change my password", class: "btn btn-outline-dark" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
    
  </div>
  
</div>
